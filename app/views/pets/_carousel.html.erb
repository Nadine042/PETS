

 <div style = "padding: 50px;" id="carousel_<%=index%>" class="carousel slide" data-bs-ride="carousel">
    <h1 style= "padding-left: 190px; padding-bottom: 40px;"><%= "#{list.first.kind}s".upcase %></h1>
    <div style = "padding: 0 200px 0 200px;" class="carousel-inner">

<%# GROUP 4 CATS TOGETHER %>
            <% list.in_groups_of(4, false).each_with_index do |group, index| %>
              <div class="carousel-item <%= 'active' if index == 0 %>">
    <%# FOR EACH ROW OF 4 DO THIS %>
                <div class="row">
                  <% group.each do |pet| %>
                    <div class="col-md-3">
                      <div style ="padding: 0;" class="card">
                        <div style = "padding: 0;" class="card-body">
                        <% if pet.profile_picture.attached? %>
                          <img style="margin-top: 0px; margin-right: 0; width: 100%; height: 180px;" src="<%= cl_image_path(pet.profile_picture.key) %>" alt="Pet Image" class="image">
                        <%end%>
                          <h5 class="card-title"><%=link_to pet.name, pet_path(pet)%></h5>
                          <p style= "margin-left: 0px">Start date and end date</p>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
    </div>


  <a class="carousel-control-prev" href="#carousel_<%=index%>" role="button" data-bs-slide="prev">
    <span style = "background-image: url(https://banner2.cleanpng.com/20180509/czq/avc46ec59.webp)" class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel_<%=index%>" role="button" data-bs-slide="next">
    <span style = "background-image: url(https://banner2.cleanpng.com/20180417/aew/avfo6u08p.webp)"; class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </a>
</div>
