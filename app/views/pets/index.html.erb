<div class="container">
<h1>All pets</h1>
<br>

    <%@pets.each do |pet| %>
      <div class="card">
     <img src = <%= pet.picture_url%>>
        <h2 class="btn"><%=link_to pet.name, pet_path(pet)%></h2>
      </div>
    <% end %>
<p><%= link_to 'create pet',  new_pet_path%></p>
</div>

<div style="width: 60%; height: 300px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
